---
import Layout from "../layouts/Layout.astro";
import "../assets/app.css";
---

<Layout>
  <div class="h-screen flex flex-col items-center justify-center mt-[-50px]">
    <h1 class="text-3xl font-bold mb-4">Vota 6</h1>
    <h2 class="text-3xl font-bold mb-4">Vota Capi</h2>
    <div class="rounded-4xl overflow-hidden">
      <img src="/logo.png" class="w-full h-96" />
    </div>
    <div class="flex flex-col">
      <h3 class="mt-1 mb-0 pl-1">Capy el rey del estadio</h3>
      <audio controls autoplay class="w-96">
        <source src="/Capy-El-Rey-Del-Estadio.mp3" type="audio/mp3" />
      </audio>
      <h3 class="mt-1 mb-0 pl-1">Vamos con Capy Bara</h3>
      <audio controls class="w-96">
        <source src="/Vamos-con-Capy-Bara.mp3" type="audio/mp3" />
      </audio>
    </div>
  </div>
</Layout>

<style>
  h1 {
    font-family: "Bungee Tint", sans-serif;
    font-weight: 400;
    font-style: normal;
    font-size: 56px;
    margin-bottom: 0px;
  }

  h2 {
    font-family: "Lato", sans-serif;
    font-weight: 800;
    font-size: 48px;
    font-style: normal;
  }

  p {
    font-size: 96px;
  }

  @keyframes pulse {
    0% {
      opacity: 1;
    }
    50% {
      opacity: 0.5;
    }
    100% {
      opacity: 1;
    }
  }

  p {
    animation: pulse 1s infinite;
  }
</style>
