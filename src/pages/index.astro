---
import Layout from "../layouts/Layout.astro";
import "../assets/app.css";
---

<Layout>
  <div class="min-h-screen flex flex-col items-center justify-center md:mt-[-100px]">
    <h1 class="text-3xl font-bold mb-4">Vota 6</h1>
    <h2 class="text-3xl font-bold mb-4">Vota <span class="text-orange-300">Capy</span> para mascota de FZ</h2>
    <div class="flex flex-col gap-4 md:flex-row">
      <div class="rounded-4xl overflow-hidden">
        <img src="/logo.png" class="w-full max-h-96 object-contain" />
      </div>
      <div class="flex flex-col bg-gray-700 rounded-4xl p-4 w-full md:w-96">
        <h3 class="text-xl text-center font-bold mb-4 text-orange-300">Tracks de Capy</h3>
        <h4 class="my-4 mb-2 pl-1 text-orange-100">Capy el rey del estadio:</h4>
        <audio controls autoplay class="w-full">
          <source src="/Capy-El-Rey-Del-Estadio.mp3" type="audio/mp3" />
        </audio>
        <h4 class="my-4 mb-2 pl-1 text-orange-100">Vamos con Capy Bara:</h4>
        <audio controls class="w-full">
          <source src="/Vamos-con-Capy-Bara.mp3" type="audio/mp3" />
        </audio>
      </div>
    </div>
  </div>
</Layout>

<style>
  h1 {
    font-family: "Bungee Tint", sans-serif;
    font-weight: 400;
    font-style: normal;
    font-size: 56px;
    margin-bottom: 0px;
    text-align: center;
    animation: pulse 1s infinite;
  }

  h2 {
    font-family: "Lato", sans-serif;
    font-weight: 800;
    font-size: 36px;
    font-style: normal;
    text-align: center;
  }

  p {
    font-size: 96px;
  }

  @keyframes pulse {
    0% {
      opacity: 1;
    }
    50% {
      opacity: 0.8;
      scale: 1.5;
    }
    100% {
      opacity: 1;
    }
  }
  p {
    animation: pulse 1s infinite;
  }

  @media (max-width: 768px) {
    h1 {
      font-size: 48px;
    }
    h2 {
      font-size: 36px;
    }
  }
</style>
